#!/bin/sh

# Print the headline, blank, question, blank
i=0; while [ $i -lt 4 ] && IFS= read -r line; do
    echo "$line"
    i=$((i + 1))
done

# Shuffle the multiple choice options
i=0; while [ $i -lt 4 ] && IFS= read -r line; do
    echo "$line"
    i=$((i + 1))
done | shuf

# Print the rest
while IFS= read -r line; do
    echo "$line"
done
